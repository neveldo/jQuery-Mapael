{
    "esversion": 3,       // Legacy ECMAScript version (IE9 and below)
    "jquery": true,       // true: use jQuery
    "browser": true,      // true: use browser env
    "devel": true,        // true: allow console
    "undef": true,        // true: prohibits the use of explicitly undeclared variables
    "unused": true,       // true: Warns about declared variable not used
    "nonbsp": true,       // true: Warns about "non-breaking whitespace" characters
    "latedef": true,      // true: Require variables/functions to be defined before being used
    "noarg": true,        // true: Prohibit use of `arguments.caller` and `arguments.callee`

    "laxcomma": true,     // true: allow unsafe line breakings
    "laxbreak": true,     // true: allow comma-first coding style

    "eqeqeq": true,       // true: enforce stric equality

    "forin": true,        // true: requires all for in loops to filter object's items
    "freeze" : true,      // true: prohibits overwriting prototypes of native objects
    "nocomma" : true,     // true: prohibits the use of the comma operator
    "nonew" : true,       // true: prohibits the use of constructor functions for side-effects

    "globals": {
        "define": true,   // for AMD
        "require": true,  // for CommonJS
        "module": true,   // for CommonJS
        "exports": true,  // for CommonJS
        "Raphael": true   // for Raphael.js
    }
}
